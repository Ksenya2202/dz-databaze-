INSERT INTO Albums (title, release_year) VALUES 
('Новый альбом 2020', 2020)
ON CONFLICT (title) DO NOTHING;

INSERT INTO AlbumArtists (album_id, artist_id)
SELECT a.album_id, ar.artist_id
FROM Albums a, Artists ar
WHERE a.title = 'Новый альбом 2020' 
  AND ar.name = 'The Hatters'
ON CONFLICT (album_id, artist_id) DO NOTHING;

INSERT INTO Albums (title, release_year) VALUES 
('Лето 2019', 2019)
ON CONFLICT (title) DO NOTHING;

INSERT INTO AlbumArtists (album_id, artist_id)
SELECT a.album_id, ar.artist_id
FROM Albums a, Artists ar
WHERE a.title = 'Лето 2019' 
  AND ar.name = 'Лепс'
ON CONFLICT (album_id, artist_id) DO NOTHING;

SELECT g.name AS genre, COUNT(ag.artist_id) AS artist_count
FROM Genres g
LEFT JOIN ArtistGenres ag ON g.genre_id = ag.genre_id
GROUP BY g.genre_id, g.name
ORDER BY artist_count DESC;

SELECT COUNT(t.track_id) AS track_count
FROM Tracks t
JOIN Albums a ON t.album_id = a.album_id
WHERE a.release_year BETWEEN 2019 AND 2020;

SELECT a.title AS album, AVG(t.duration) AS avg_duration_seconds
FROM Albums a
JOIN Tracks t ON a.album_id = t.album_id
GROUP BY a.album_id, a.title
ORDER BY avg_duration_seconds DESC;

SELECT DISTINCT ar.name AS artist
FROM Artists ar
WHERE ar.artist_id NOT IN (
    SELECT DISTINCT aa.artist_id
    FROM AlbumArtists aa
    JOIN Albums a ON aa.album_id = a.album_id
    WHERE a.release_year = 2020
)
ORDER BY ar.name;

SELECT DISTINCT c.title AS compilation
FROM Compilations c
JOIN CompilationTracks ct ON c.compilation_id = ct.compilation_id
JOIN Tracks t ON ct.track_id = t.track_id
JOIN Albums a ON t.album_id = a.album_id
JOIN AlbumArtists aa ON a.album_id = aa.album_id
JOIN Artists ar ON aa.artist_id = ar.artist_id
WHERE ar.name = 'КиШ'
ORDER BY c.title;
